<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.captaindeer.rookmotionchallengemvvm.ui.home.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/navigateToDetailFragment"
            app:destination="@id/userDetailFragment2" />
        <argument
            android:name="userEntity"
            app:argType="com.captaindeer.rookmotionchallengemvvm.data.local.entities.UserEntity" />

    </fragment>
    <fragment
        android:id="@+id/userDetailFragment2"
        android:name="com.captaindeer.rookmotionchallengemvvm.ui.userdetail.view.UserDetailFragment"
        android:label="fragment_user_detail"
        tools:layout="@layout/fragment_user_detail">
        <action
            android:id="@+id/navigateToHomeFragment"
            app:destination="@id/homeFragment" />

        <argument
            android:name="userEntity"
            app:argType="com.captaindeer.rookmotionchallengemvvm.data.local.entities.UserEntity" />

    </fragment>
</navigation>